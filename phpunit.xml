<?xml version="1.0" encoding="UTF-8"?>
<phpunit bootstrap="./var/vendor/autoload.php"
         backupGlobals="false"
         backupStaticAttributes="false"
         colors="true"
         verbose="true"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         processIsolation="false"
         stopOnFailure="true">
    <testsuites>
        <testsuite name="Rawkode\Eidetic Test Suite">
            <directory>test/phpunit</directory>
        </testsuite>
    </testsuites>
    <filter>
        <whitelist>
            <directory suffix=".php">src/</directory>
        </whitelist>
    </filter>
    <logging>
        <log type="tap" target="var/build/report.tap"/>
        <log type="junit" target="var/build/report.junit.xml"/>
        <log type="coverage-html" target="var/build/coverage" charset="UTF-8" yui="true" highlight="true"/>
        <log type="coverage-text" target="var/build/coverage.txt"/>
        <log type="coverage-clover" target="var/build/logs/clover.xml"/>
    </logging>
</phpunit>
